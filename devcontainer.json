{
  "name": "Record Verifier Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && pip install -e .",
  "remoteUser": "vscode"
}